<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <ul>
        <% messages.forEach(function(message) { %>
            <li>
                <strong>User:</strong> <%= message.user %><br>
                <strong>Message:</strong> <%= message.text %><br>
                <strong>Added:</strong> <%= message.added %>
            </li>
            <p>-----------------------------------------------</p>
        <% }); %>
    </ul>

  <a href="/new">New Message</a>
  </body>
</html>
